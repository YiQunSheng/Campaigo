<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/Apply_Toolbar"
        app:title="活动申请"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">
    </android.support.v7.widget.Toolbar>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="384dp">
        <LinearLayout
            android:background="@color/primary"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/campaigns_white"/>
            <TextView
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请一个新活动"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout

            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="活动名称:"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="9dp"
                android:textColor="@color/secondary_text"
                android:layout_weight="2.5"
                />
            <EditText
                android:id="@+id/edit_apply_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:hint="中英文数字不超过15字"
                android:textColorHint="#A9A9A9"
                android:maxLines="1"
                android:padding="9dp"
                android:textSize="16dp" />

        </LinearLayout>
        <View
            android:background="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:padding="9dp"
                android:text="活动开始时间："
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <TextView
                android:text="点击设置开始时间"
                android:id="@+id/edit_apply_starttime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="9dp"
                android:textSize="16dp"
                android:textColor="#A9A9A9"
                android:textColorHint="#A9A9A9" />

        </LinearLayout>
        <View
            android:background="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="left"
                android:text="活动结束时间"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="9dp"
                android:textColor="@color/secondary_text"
                android:layout_weight="2.5"
                />

            <TextView
                android:text="点击设置结束时间"
                android:id="@+id/edit_apply_finishedline"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:padding="9dp"
                android:textColor="#A9A9A9" />

        </LinearLayout>
        <View
            android:background="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="报名截止时间："
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="9dp"
                android:textColor="@color/secondary_text"
                android:layout_weight="2.5"
                />

            <TextView
                android:text="点击设置报名截止时间"
                android:textColorHint="#A9A9A9"
                android:id="@+id/edit_apply_endedline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="16dp"
                android:padding="9dp"
                android:textColor="#A9A9A9" />

        </LinearLayout>
        <View
            android:background="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="left"
                android:text="活动描述："
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:padding="9dp"
                android:textColor="@color/secondary_text"
                android:layout_weight="2.5"
                />

            <EditText
                android:hint="中英文数字不超过30字"
                android:maxLines="3"
                android:id="@+id/edit_apply_describe"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:padding="9dp"
                android:layout_height="match_parent"
                android:textColor="@color/secondary_text" />

        </LinearLayout>
        <View
            android:background="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_ApplyCampaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF9800"
                android:text="申请本活动"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>